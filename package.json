{
  "name": "@qytera/xray-client",
  "version": "0.0.3",
  "description": "A typesafe HTTP client for the Xray API.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig-build.json && shx cp README.md package.json package-lock.json dist/",
    "code:format": "prettier src/**/*.ts test/**/*.ts index.ts --write",
    "code:lint": "eslint",
    "generate:graphql": "node --import ./test/loader.js src/models/xray/graphql/codegen.ts",
    "generate:jira-cloud": "node --import ./test/loader-esnext.js src/models/jira/codegen.ts",
    "test": "node --import ./test/loader.js ./test/run-unit-tests.ts"
  },
  "author": "dev@qytera.de",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/Qytera-Gmbh/xray-client-node.git",
    "type": "git"
  },
  "keywords": [
    "xray",
    "client"
  ],
  "exports": {
    ".": "./index.js"
  },
  "types": "index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.4",
    "@graphql-codegen/typescript": "^4.1.3",
    "@types/node": "^22.13.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "eslint-plugin-perfectionist": "^4.7.0",
    "graphql": "^16.10.0",
    "openapi-typescript": "^7.6.0",
    "prettier": "^3.4.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  }
}
